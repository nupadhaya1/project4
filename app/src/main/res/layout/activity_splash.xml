<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BA0C2F"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:background="#BA0C2F"
            android:gravity="center"
            android:text="Country Quiz App"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:textSize="20dp"
            android:text="General Information" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BA0C2F"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:text="This is a quiz app to help you learn about countries and which continents they are a part of"
            android:textColor="@color/white"
            android:paddingBottom="2dp"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="4dp"
            android:textSize="16dp"
            android:text="Choose 'New Quiz' to start a new quiz" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="4dp"
            android:textSize="16dp"
            android:text="Choose 'Past Quizzes' to view past quiz scores" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#BA0C2F"
            android:orientation="horizontal">

            <Button
                android:id="@+id/quizButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="New Quiz"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/pastButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:backgroundTint="#FFFFFF"
                android:text="Past Quizzes"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>